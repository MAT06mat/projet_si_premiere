<SpeedLabel>:
    color: (0, 0, 0, 1)
    size_hint: (0.2, 0.2)
    pos_hint: {"center_x": 0.5, "center_y": 0.8}
    font_size: self.width / 4

<Arrow>:
    size_hint: (0.4, None)
    height: self.width
    color: (0, 0, 0, 1)

<LeftArrow>:
    source: "images/left_arrow.png"
    pos_hint: {"center_x": 0.265, "center_y": 0.45}

<RightArrow>:
    source: "images/right_arrow.png"
    pos_hint: {"center_x": 0.745, "center_y": 0.45}

<StopButton>:
    source: "images/stop.png"
    size_hint: (None, None)

<WarningButton>:
    source: "images/warning.png"
    size_hint: (None, None)
