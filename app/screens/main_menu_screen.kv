<SpeedLabel>:
    color: (0, 0, 0, 1)
    size_hint: (0.2, 0.2)
    pos_hint: {"center_x": 0.5, "center_y": 0.8}
    font_size: self.width / 4

<Arrow>:
    size_hint: (0.4, None)
    height: self.width
    color: (0, 0, 0, 1)

<LeftArrow>:
    source: "images/left_arrow.png"
    pos_hint: {"center_x": 0.265, "center_y": 0.45}

<RightArrow>:
    source: "images/right_arrow.png"
    pos_hint: {"center_x": 0.745, "center_y": 0.45}

<StopButton>:
    source: "images/stop.png"
    size_hint: (None, None)

<WarningButton>:
    source: "images/warning.png"
    size_hint: (None, None)

<SettingButton>:
    height: self.width * 1.66

<SlideButton@Button>:
    markup: True
    font_size: self.parent.width / 12
    size_hint: (0.02, 0.02)
    halign: 'center'
    valign: 'middle'
    color: (0.2, 0.2, 0.2, 1)
    bold: True
    background_normal: ""
    background_color: (0, 0, 0, 0)

<SlideBar>:
    canvas.before:
        Color:
            rgba: 0.4, 0.4, 0.4, 0.85
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 0, -10
            spread_radius: -20, -20
            border_radius: 10, 10, 10, 10
            blur_radius: 80
        Color:
            rgba: (0.9, 0.9, 0.9, 1)
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: (0.8, 0.8, 0.8, 1)
        Line:
            points: (root.x+root.width*0.05, root.height*0.85, root.right-root.width*0.05, root.height*0.85)
            width: dp(2)
            joint: 'round'
    Label:
        text: "Menu"
        pos_hint: {"center_x": 0.7, "center_y": 0.9}
        size_hint: (0.02, 0.02)
        halign: 'center'
        valign: 'middle'
        font_size: root.width / 8
        color: (0.1, 0.1, 0.1, 1)
        bold: True
    SlideButton:
        text: "[ref=deco]Deconnexion[/ref]"
        pos_hint: {"center_x": 0.7, "center_y": 0.8}
        on_ref_press: root.deco()
    SlideButton:
        text: "[ref=setting]Param√®tres[/ref]"
        pos_hint: {"center_x": 0.7, "center_y": 0.75}
        on_ref_press: root.settings_screen()
