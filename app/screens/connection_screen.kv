<AnimateImage>:
    size_hint: (1, None)
    fit_mode: "cover"
    height: self.width * 1.75

<ConnectMessage>:
    size_hint: (0.8, None)
    height: self.width / 10
    font_size: self.width / 18
    canvas.before:
        Color:
            rgba: (1, 0.22, 0.11, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [self.height / 2, ]

<ConnectButton>:
    height: self.width * 0.25

<ConnectLabel>:
    text_size: (self.width, None)

<ConnectTitle>:
    font_size: self.width / 13
    y: self.parent.connect_description.top if self.parent else 0

<ConnectDescription>:
    font_size: self.width / 18
    height: self.texture_size[1]

<SettingButton>:
    height: self.width * 1.66

<Background>:
    canvas.before:
        Color:
            rgba: (0.9, 0.9, 0.9, 1)
        Rectangle:
            pos: self.pos
            size: self.size
